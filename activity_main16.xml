<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity16">

    <TextView
        android:id="@+id/backwardArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:text="&#x2190;"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#37474F"
        android:clickable="true"
        android:focusable="true" />


    <TextView
        android:id="@+id/editprofiletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:layout_marginTop="30dp"
        android:layout_marginStart="90dp"
        android:textColor="#37474F"
        android:textStyle="bold"
        android:textSize="24sp"/>


    <ImageView
        android:id="@+id/profilepictureView"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/profilepicture" />

    <ImageView
        android:id="@+id/editprofilepictureView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="255dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/editprofile" />



    <EditText
        android:id="@+id/fullnameEditTextt"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="310dp"
        android:layout_marginStart="30dp"
        android:background="#F7F9FA"
        android:hint="Full Name"
        android:padding="12dp"
        android:textSize="18sp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/passwordEditTextt"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="380dp"
        android:layout_marginStart="30dp"
        android:background="#F7F9FA"
        android:hint="Password"
        android:padding="12dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/phonenumberEditTextt"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="450dp"
        android:layout_marginStart="30dp"
        android:background="#F7F9FA"
        android:hint="Phone Number"
        android:padding="12dp"
        android:textSize="18sp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:text="Save"
        android:layout_marginTop="680dp"
        android:layout_marginStart="110dp"
        android:textSize="18sp"
        android:textColor="#FDFDFC"
        android:textStyle="bold"
        android:backgroundTint="#8A7B68" />


</RelativeLayout>






