<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity9">

    <TextView
        android:id="@+id/backwardArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:text="&#x2190;"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#37474F"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/chattext"
        android:layout_width="550dp"
        android:layout_height="50dp"
        android:text="Chat with us"
        android:layout_marginTop="25dp"
        android:layout_marginStart="80dp"
        android:textColor="#37474F"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/dottext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:layout_marginTop="25dp"
        android:layout_marginStart="360dp"
        android:textColor="#37474F"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <ImageView
        android:id="@+id/refundImageView"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="240dp"
        android:src="@drawable/refund" />

    <ImageView
        android:id="@+id/deliveryisntgoodImageView"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/deliveryisntgood" />

    <ImageView
        android:id="@+id/deliveryislateImageView"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="360dp"
        android:src="@drawable/deliveryislate" />


    <EditText
        android:id="@+id/messageEditTextt"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="530dp"
        android:layout_marginStart="30dp"
        android:background="#F7F9FA"
        android:hint="Write a message"
        android:padding="12dp"
        android:textSize="18sp"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/sendvideoImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="540dp"
        android:src="@drawable/sendvideo" />

    <ImageView
        android:id="@+id/sendpictureImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="540dp"
        android:src="@drawable/sendpicture" />

    <ImageView
        android:id="@+id/sendmsgImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="540dp"
        android:src="@drawable/sendmsg" />


</RelativeLayout>










