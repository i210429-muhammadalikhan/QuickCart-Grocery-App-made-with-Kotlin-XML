<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFFFF">



    <!-- Left Arrow Button -->
    <ImageButton
        android:id="@+id/buttonLeftArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:background="@android:color/transparent"
        app:tint="#37474F" />

    <!-- "Hi, Iâ€™m John Cooper" Text -->
    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Result"
        android:textStyle="bold"
        android:textColor="#37474F"
        android:textSize="25sp"
        android:layout_below="@+id/buttonLeftArrow"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"/>


    <LinearLayout
        android:id="@+id/boxContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/textName"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp">

        <!-- Box 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dano Milk"
            android:background="@drawable/rounded_box_background"
            android:padding="8dp"
            android:layout_marginEnd="16dp"/>

        <!-- Box 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nestle"
            android:background="@drawable/rounded_box_background"
            android:padding="8dp"
            android:layout_marginEnd="16dp"/>

        <!-- Box 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nestle Milk"
            android:background="@drawable/rounded_box_background"
            android:padding="8dp"
            android:layout_marginEnd="16dp"/>

        <!-- Box 4 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Freast Yoghurt"
            android:background="@drawable/rounded_box_background"
            android:padding="6dp"/>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchrecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/boxContainer"
        android:layout_marginTop="26dp"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />







</RelativeLayout>