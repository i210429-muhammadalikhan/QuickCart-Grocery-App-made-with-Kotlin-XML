<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity13">

    <TextView
        android:id="@+id/backwardArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:text="&#x2190;"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#37474F"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/wishlisttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wishlist"
        android:layout_marginTop="30dp"
        android:layout_marginStart="80dp"
        android:textColor="#37474F"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/nestle1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nestle Nido Full Cream
Milk Powder Instant"
        android:layout_marginTop="180dp"
        android:layout_marginStart="140dp"
        android:textColor="#37474F"
        android:textStyle="bold"
        android:textSize="18sp"/>




    <TextView
        android:id="@+id/price1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$400"
        android:layout_marginTop="250dp"
        android:layout_marginStart="140dp"
        android:textColor="#FF5722"
        android:textSize="24sp"/>


    <TextView
        android:id="@+id/nestle2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nestle Nido Full Cream
Milk Powder Instant"
        android:layout_marginTop="380dp"
        android:layout_marginStart="140dp"
        android:textColor="#37474F"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/price3TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$124"
        android:layout_marginTop="450dp"
        android:layout_marginStart="140dp"
        android:textColor="#FF5722"
        android:textSize="24sp"/>

    <ImageView
        android:id="@+id/nido1ImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="180dp"
        android:src="@drawable/nido1" />

    <ImageView
        android:id="@+id/nido2ImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="380dp"
        android:src="@drawable/nido2" />

    <Button
        android:id="@+id/addtowishlistButton"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:text="Add a New Product to Wishlist"
        android:layout_marginTop="680dp"
        android:layout_marginStart="50dp"
        android:textSize="18sp"
        android:textColor="#FDFDFC"
        android:textStyle="bold"
        android:backgroundTint="#8A7B68" />

</RelativeLayout>






