<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity4">

    <ImageView
        android:id="@+id/centerImageView"
        android:layout_width="550dp"
        android:layout_height="225dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/phoneverify" />

    <TextView
        android:layout_width="550dp"
        android:layout_height="50dp"
        android:text="Enter your mobile number"
        android:layout_marginTop="430dp"
        android:layout_marginStart="30dp"
        android:textColor="#37474F"
        android:textStyle="bold"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We need to verify you. We will send you a one-time verification code."
        android:layout_marginTop="460dp"
        android:layout_marginStart="30dp"
        android:textColor="#37474F"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="530dp"
        android:layout_marginStart="30dp"
        android:background="#F7F9FA"
        android:hint="Phone Number"
        android:padding="12dp"
        android:textSize="18sp"
        android:textColor="#000000"/>


    <Button
        android:id="@+id/NextButton"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="Next"
        android:layout_marginTop="600dp"
        android:layout_marginStart="130dp"
        android:textSize="18sp"
        android:textColor="#FDFDFC"
        android:textStyle="bold"
        android:backgroundTint="#8A7B68" />

</RelativeLayout>






