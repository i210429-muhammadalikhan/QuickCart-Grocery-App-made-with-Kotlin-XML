<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity7">


    <TextView
        android:id="@+id/ordertext"
        android:layout_width="550dp"
        android:layout_height="50dp"
        android:text="Orders"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textColor="#37474F"
        android:textStyle="bold"
        android:textSize="24sp"/>


    <TextView
        android:id="@+id/ongoingordertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ongoing"
        android:layout_marginTop="90dp"
        android:layout_marginStart="60dp"
        android:textColor="#4EF608"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/ongoingordertextline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="----------"
        android:layout_marginTop="110dp"
        android:layout_marginStart="60dp"
        android:textColor="#4EF608"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/historyordertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:layout_marginTop="90dp"
        android:layout_marginStart="260dp"
        android:textColor="#37474F"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <ImageView
        android:id="@+id/orderImageView"
        android:layout_width="wrap_content"
        android:layout_height="290dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="180dp"
        android:src="@drawable/ordersimage" />

    <TextView
        android:id="@+id/instructionTextVieww"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There is no ongoing order right now"
        android:layout_marginTop="550dp"
        android:layout_marginStart="60dp"
        android:textColor="#37474F"
        android:textStyle="bold"
        android:textSize="22sp"/>


</RelativeLayout>






