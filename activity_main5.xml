<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity5">

    <TextView
        android:id="@+id/backwardArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:text="&#x2190;"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#8A7B68"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/passwordImageVieww"
        android:layout_width="650dp"
        android:layout_height="290dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/passwordimage" />

    <TextView
        android:layout_width="550dp"
        android:layout_height="50dp"
        android:text="Enter the password"
        android:layout_marginTop="430dp"
        android:layout_marginStart="30dp"
        android:textColor="#37474F"
        android:textStyle="bold"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/instructionTextVieww"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It looks like you already have an account in this
number. Please enter the password to proceed"
        android:layout_marginTop="460dp"
        android:layout_marginStart="30dp"
        android:textColor="#37474F"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/passwordEditTextt"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="530dp"
        android:layout_marginStart="30dp"
        android:background="#F7F9FA"
        android:hint="Password"
        android:padding="12dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/SubmitButton"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="Submit"
        android:layout_marginTop="600dp"
        android:layout_marginStart="130dp"
        android:textSize="18sp"
        android:textColor="#FDFDFC"
        android:textStyle="bold"
        android:backgroundTint="#8A7B68" />

</RelativeLayout>






