<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity11">

    <TextView
        android:id="@+id/backwardArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:text="&#x2190;"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#37474F"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/addressestext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Addresses"
        android:layout_marginTop="30dp"
        android:layout_marginStart="80dp"
        android:textColor="#37474F"
        android:textStyle="bold"
        android:textSize="26sp"/>

    <TextView
        android:id="@+id/homeaddressestext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_marginTop="90dp"
        android:layout_marginStart="20dp"
        android:textColor="#37474F"
        android:textStyle="bold"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/homeaddressesstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="51/5A, Road: 7, Pallabi, Dhaka"
        android:layout_marginTop="120dp"
        android:layout_marginStart="20dp"
        android:textColor="#8A7B68"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/homeaddressestextseparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="______________________________________________"
        android:layout_marginTop="160dp"
        android:layout_marginStart="20dp"
        android:textColor="#37474F"
        android:textStyle="bold"
        android:textSize="22sp"/>


    <TextView
        android:id="@+id/workaddressestext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work"
        android:layout_marginTop="190dp"
        android:layout_marginStart="20dp"
        android:textColor="#37474F"
        android:textStyle="bold"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/workaddressesstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dingi Technologies Ltd, Wakil T"
        android:layout_marginTop="220dp"
        android:layout_marginStart="20dp"
        android:textColor="#8A7B68"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/pencilaboveImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/pencilimage" />

    <ImageView
        android:id="@+id/pencilbelowImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/pencilimage" />

    <ImageView
        android:id="@+id/deleteaboveImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="330dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/deleteimage" />

    <ImageView
        android:id="@+id/deletebelowImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="330dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/deleteimage" />


    <Button
        android:id="@+id/addNewAddressButton"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:text="Add New Address                       +"
        android:layout_marginTop="730dp"
        android:layout_marginStart="40dp"
        android:textSize="18sp"
        android:textColor="#FDFDFC"
        android:textStyle="bold"
        android:backgroundTint="#8A7B68" />


</RelativeLayout>






