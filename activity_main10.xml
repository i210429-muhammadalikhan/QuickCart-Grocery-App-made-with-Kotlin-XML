<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity10">

    <TextView
        android:id="@+id/backwardArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:text="&#x2190;"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#8A7B68"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/shareexperiencetext"
        android:layout_width="550dp"
        android:layout_height="50dp"
        android:text="Please Share your Experience with us"
        android:layout_marginTop="70dp"
        android:layout_marginStart="20dp"
        android:textColor="#37474F"
        android:textStyle="bold"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/startext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.0"
        android:layout_marginTop="170dp"
        android:layout_marginStart="180dp"
        android:textColor="#37474F"
        android:textStyle="bold"
        android:textSize="22sp"/>

    <ImageView
        android:id="@+id/ratingImageView"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/ratingimage" />

    <EditText
        android:id="@+id/reviewEditTextt"
        android:layout_width="360dp"
        android:layout_height="180dp"
        android:layout_marginTop="320dp"
        android:layout_marginStart="30dp"
        android:background="#F7F9FA"
        android:hint="Write a Review"
        android:padding="12dp"
        android:textSize="18sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/linetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_____________________________________"
        android:layout_marginTop="470dp"
        android:layout_marginStart="20dp"
        android:textColor="#0FA0E8"
        android:textStyle="bold"
        android:textSize="22sp"/>
    
    <Button
        android:id="@+id/SubmitButton"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:text="Submit"
        android:layout_marginTop="540dp"
        android:layout_marginStart="90dp"
        android:textSize="18sp"
        android:textColor="#FDFDFC"
        android:textStyle="bold"
        android:backgroundTint="#8A7B68" />

    <Button
        android:id="@+id/SkipButton"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:text="Skip"
        android:layout_marginTop="600dp"
        android:layout_marginStart="90dp"
        android:textSize="18sp"
        android:textColor="#FDFDFC"
        android:textStyle="bold"
        android:backgroundTint="#8A7B68" />


</RelativeLayout>






